{
  "name": "@loot/electron-main",
  "private": true,
  "type": "commonjs",
  "main": "dist/main.js",
  "scripts": {
    "dev": "pnpm run build && pnpm run start",
    "build": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\" && tsc -p . && node -e \"require('fs').mkdirSync('dist/db/migrations',{recursive:true}); try{require('fs').cpSync('src/db/migrations','dist/db/migrations',{recursive:true})}catch{}\"",
    "start": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron ./dist/main.js"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "electron": "37.4.0",
    "electron-rebuild": "^3.2.9",
    "typescript": "^5.6.3"
  }
}
